# Example of the root .htaccess used by Apache for this app
# Note: Keep the real .htaccess at the project root so the site works.

# Disable directory listings and set default file
Options -Indexes
DirectoryIndex index.php index.html

# Optional: enable pretty URLs (uncomment to use)
<IfModule mod_rewrite.c>
  RewriteEngine On
  # RewriteBase /hotel-reservation-system/
  #RewriteCond %{REQUEST_FILENAME} !-f
  #RewriteCond %{REQUEST_FILENAME} !-d
  #RewriteRule ^ index.php [L]
</IfModule>

# Block access to sensitive files by extension
<FilesMatch "\.(env|ini|log|sql|sh|phar)$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Deny from all
  </IfModule>
</FilesMatch>
